<a href="/session/new">Sign up!</a>

<% @user.errors.messages.each do |attr, message| %>
  <p>error on <%= attr %><%= message %></p>
<% end %>


<%= form_for(@user) do |f| %>
  <%= f.label(:name) %>
    <%= f.text_field(:name) %>
  <%= f.label(:email) %>
    <%= f.text_field(:email) %>
  <%= f.label(:gender) %>
    <%= f.select(:gender, ["Male", "Female"]) %>
  <%= f.label(:age) %>
    <%= f.number_field(:age) %>
  <%=f.label(:style) %>
    <%= f.text_field(:style) %>
  <%= f.label(:password) %>
    <%= f.password_field(:password) %>
  <%= f.label(:password_confirmation) %>
    <%= f.password_field(:password_confirmation) %>
  <%= f.submit %>
<% end %>
